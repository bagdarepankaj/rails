<%=  form_with(model: user) do |f| %>

  <div>
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name %><br>
  </div>

  <div>
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name %><br>
  </div>

  <div>
    <%= f.label :email %><br>
    <%= f.text_field :email %><br>
  </div>

  <% if params[:action] == "new" %>
    <div>
      <%= f.label :password %><br>
      <%= f.password_field :password %><br>
    </div>
  <% end %>

  <%= f.submit :submit %>
<% end %>
