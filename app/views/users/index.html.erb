<h2>Users</h2>

<div class="user">
  <table>
    <thead>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Action</th>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.email %></td>
          <td>
            <%= link_to 'Show', user_path(user) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div><br>

<%= link_to "New User", new_user_url %>
